MONGODB_URI=mongodb://127.0.0.1:27017/quizApp
# Preferred for production when you have a direct (non-SRV) Atlas URI:
MONGODB_URI_DIRECT=
# Optional alternative: keep placeholders above and provide username/password separately
MONGODB_USERNAME=
MONGODB_PASSWORD=
PORT=5000
JWT_SECRET=change_this_to_a_long_random_secret
ALLOW_LOCAL_MONGO_FALLBACK=false
MONGO_IP_FAMILY=
MONGO_RETRY_COOLDOWN_MS=5000

# Firebase Web SDK (client-side config)
FIREBASE_WEB_API_KEY=
FIREBASE_WEB_AUTH_DOMAIN=
FIREBASE_WEB_PROJECT_ID=
FIREBASE_WEB_STORAGE_BUCKET=
FIREBASE_WEB_MESSAGING_SENDER_ID=
FIREBASE_WEB_APP_ID=
FIREBASE_WEB_MEASUREMENT_ID=

# Firebase Admin (optional but recommended; if omitted, server uses Firebase REST fallback)
FIREBASE_PROJECT_ID=
FIREBASE_CLIENT_EMAIL=
# Keep \n escapes in one line when pasting private key from Firebase service account JSON.
FIREBASE_PRIVATE_KEY=
